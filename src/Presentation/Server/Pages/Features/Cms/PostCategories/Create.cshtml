@page

@using Dtat
@using Resources
@using Dtat.AspNetCore.Mvc
@using Server.Pages.Features.Cms.Admin.PostCategories

@model CreateModel

@{
	var pageTitle = $"{DataDictionary.CreateOf} {DataDictionary.PostCategory}";
	ViewData[Constant.ViewDataKeyName.PageTitle] = pageTitle;
}

<section-form>
	<section-form-fieldset>
		<section-form-header>
			@(pageTitle)
		</section-form-header>

		<partial name="PartialViews/_DisplayPageMessages" />

		<dtat-full-checkbox asp-for="ViewModel.IsActive" />

		<dtat-full-input asp-for="ViewModel.Ordering" />

		<dtat-full-input asp-for="ViewModel.Name" dir="ltr" />

		<dtat-full-input asp-for="ViewModel.Title" />

		<dtat-full-input asp-for="ViewModel.Description" />
	</section-form-fieldset>

	<section-form-buttons>
		<button-create />
		<button-reset />
	</section-form-buttons>

	<section-form-footer>
		<a asp-page="Index">
			@(Html.DtatGetLinkCaptionForList())
		</a>
	</section-form-footer>
</section-form>

